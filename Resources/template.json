{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "functionAppPrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for the function app resources, in the form dfc-env-proj-fnapp"
      }
    },
    "apimResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Name of the shared resources Resource Group"
      }
    },
    "apimServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the shared APIM service"
      }
    },
    "apiName": {
      "type": "string",
      "metadata": {
        "description": "Name of the API"
      }
    },
    "apiProductDisplayName": {
      "type": "string",
      "metadata": {
        "description": "The display name for the projects APIM product"
      }
    },
    "apiSuffix": {
      "type": "string",
      "metadata": {
        "description": "Section of URL path that will preceed the path defined in code"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "App service plan to run the function app under"
      }
    },
    "appServicePlanResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group the app service plan is in"
      }
    },
    "storageConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Connection string for the storage account to store function app"
      }
    },
    "SQLConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Connection string for the SQL database"
      }
    },
    "cosmosDBfqdn": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB account name in the format https://dfc-xxx-xxx-cdb.documents.azure.com/ for app settings"
      }
    },
    "cosmosDBkey": {
      "type": "securestring",
      "metadata": {
        "description": "Cosmos DB access key for app settings"
      }
    },
    "cosmosDbAccount": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB account name for creating collections"
      }
    },
    "cosmosDBdatabase": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB database name for app settings"
      }
    },
    "cosmosDBcollection": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB collection name for app settings"
      }
    },
    "azureSearchName": {
      "type": "string",
      "metadata": {
        "description": "Name of Azure Search where the indexes are"
      }
    },
    "azureSearchQueryKey": {
      "type": "securestring",
      "metadata": {
        "description": "Query key for Azure Search"
      }
    },
    "postcodeIndexName": {
      "type": "string",
      "metadata": {
        "description": "Name of the postcode index"
      }
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/",
    "functionAppName": "[concat(parameters('functionAppPrefix'),'-fa')]",
    "appInsightName": "[concat(parameters('functionAppPrefix'),'-ai')]"
  },
  "resources": [{
      "apiVersion": "2017-05-10",
      "name": "ppvenueAppInsights",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appInsightsName": {
            "value": "[variables('appInsightName')]"
          },
          "attachedService": {
            "value": "[variables('functionAppName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "ppvenueAppService",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "ppvenueAppInsights"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServiceName": {
            "value": "[variables('functionAppName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('appServicePlanResourceGroup')]"
          },
          "appServiceType": {
            "value": "functionapp"
          },
          "appServiceAppSettings": {
            "value": [
              {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "[reference('ppvenueAppInsights').outputs.InstrumentationKey.value]"
              },
              {
                "name": "FUNCTIONS_EXTENSION_VERSION",
                "value": "~2"
              },
              {
                "name": "AzureWebJobsStorage",
                "value": "[parameters('storageConnectionString')]"
              },
              {
                "name": "CosmosDBStorageURI",
                "value": "[parameters('cosmosDBfqdn')]"
              },
              {
                "name": "CosmosDBPrimaryKey",
                "value": "[parameters('cosmosDBkey')]"
              },
              {
                "name": "CosmosDBDatabase",
                "value": "[parameters('cosmosDBdatabase')]"
              },
              {
                "name": "SQLConnectionString",
                "value": "[parameters('SQLConnectionString')]"
              },
              {
                "name": "CollectionName",
                "value": "[parameters('cosmosDBcollection')]"
              },
              {
                "name": "SearchService",
                "value": "[parameters('azureSearchName')]"
              },
              {
                "name": "QueryKey",
                "value": "[parameters('azureSearchQueryKey')]"
              },
              {
                "name": "PostcodeIndex",
                "value": "[parameters('postcodeIndexName')]"
              }
            ]
          },
          "deployStagingSlot": {
            "value": false
          }
        }
      }
    },
    {
      "name": "ppvenuesApimProduct",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[parameters('apimResourceGroup')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'), 'APIM/apim-product.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "allowAnonymousAccess": {
            "value": false
          },
          "apimServiceName": {
            "value": "[parameters('apimServiceName')]"
          },
          "productDisplayName": {
            "value": "[parameters('apiProductDisplayName')]"
          }
        }
      }
    },
    {
      "name": "ppvenuesApimApi",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[parameters('apimResourceGroup')]",
      "dependsOn": [
        "ppvenuesApimProduct"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'), 'APIM/apim-api.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimProductInstanceName": {
            "value": "[reference('ppvenuesApimProduct').outputs.ApimProductInstanceName.value]"
          },
          "apimServiceName": {
            "value": "[parameters('apimServiceName')]"
          },
          "apiName": {
            "value": "[parameters('apiName')]"
          },
          "apiSuffix": {
            "value": "[parameters('apiSuffix')]"
          }
        }
      }
    },
        {
      "apiVersion": "2017-05-10",
      "name": "cosmosCollectionVenues",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('appServicePlanResourceGroup')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
            "uri": "[concat(variables('deploymentUrlBase'),'CosmosDb/cosmos-collection.json')]",
            "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "accountName": {
              "value": "[parameters('cosmosDbAccount')]"
          },
          "databaseName": {
              "value": "[parameters('cosmosDBdatabase')]"
          },
          "collectionName": {
              "value": "venues"
          },
          "offerThroughput": {
              "value": 400
          }
        }
      }
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[variables('functionAppName')]"
    },
    "appInsightName": {
      "type": "string",
      "value": "[variables('appInsightName')]"
    },
    "appInsightInstrumentationKey": {
      "type": "string",
      "value": "[reference('ppvenueAppInsights').outputs.InstrumentationKey.value]"
    }
  }
}