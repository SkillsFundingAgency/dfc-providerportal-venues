{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "functionAppPrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for the function app resources, in the form dfc-env-proj-fnapp"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "App service plan to run the function app under"
      }
    },
    "appServicePlanResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group the app service plan is in"
      }
    },
    "storageConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Connection string for the storage account to store function app"
      }
    },
    "SQLConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Connection string for the SQL database"
      }
    },
    "cosmosDBfqdn": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB account name in the format https://dfc-xxx-xxx-cdb.documents.azure.com/"
      }
    },
    "cosmosDBkey": {
      "type": "securestring",
      "metadata": {
        "description": "Cosmos DB access key"
      }
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/",
    "functionAppName": "[concat(parameters('functionAppPrefix'),'-fa')]",
    "appInsightName": "[concat(parameters('functionAppPrefix'),'-ai')]"
  },
  "resources": [{
      "apiVersion": "2017-05-10",
      "name": "ppukrlpAppInsights",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appInsightsName": {
            "value": "[variables('appInsightName')]"
          },
          "attachedService": {
            "value": "[variables('functionAppName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "ppukrlpAppService",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "ppukrlpAppInsights"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'function-app.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "functionAppName": {
            "value": "[variables('functionAppName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('appServicePlanResourceGroup')]"
          },
          "functionAppAppSettings": {
            "value": [
              {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "[reference('ppukrlpAppInsights').outputs.InstrumentationKey.value]"
              },
              {
                "name": "FUNCTIONS_EXTENSION_VERSION",
                "value": "~2"
              },
              {
                "name": "AzureWebJobsStorage",
                "value": "[parameters('storageConnectionString')]"
              },
              {
                "name": "CosmosDBStorageURI",
                "value": "[parameters('cosmosDBfqdn')]"
              },
              {
                "name": "CosmosDBPrimaryKey",
                "value": "[parameters('cosmosDBkey')]"
              },
              {
                "name": "CosmosDBDatabase",
                "value": "ukrlp"
              },
              {
                "name": "SQLConnectionString",
                "value": "[parameters('SQLConnectionString')]"
              },
              {
                "name": "CollectionName",
                "value": "venues"
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[variables('functionAppName')]"
    },
    "appInsightName": {
      "type": "string",
      "value": "[variables('appInsightName')]"
    },
    "appInsightInstrumentationKey": {
      "type": "string",
      "value": "[reference('ppukrlpAppInsights').outputs.InstrumentationKey.value]"
    }
  }
}