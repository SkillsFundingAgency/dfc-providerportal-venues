{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appInsightsInstrumentationKey":{
      "type": "string"
    },
    "functionAppPrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for the function app resources, in the form dfc-env-proj-fnapp"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "App service plan to run the function app under"
      }
    },
    "appServicePlanResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group the app service plan is in"
      }
    },
    "storageConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Connection string for the storage account to store function app"
      }
    },
    "SQLConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Connection string for the SQL database"
      }
    },
    "cosmosDBfqdn": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB account name in the format https://dfc-xxx-xxx-cdb.documents.azure.com/ for app settings"
      }
    },
    "cosmosDBkey": {
      "type": "securestring",
      "metadata": {
        "description": "Cosmos DB access key for app settings"
      }
    },
    "cosmosDbAccount": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB account name for creating collections"
      }
    },
    "cosmosDBdatabase": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB database name for app settings"
      }
    },
    "cosmosDBcollection": {
      "type": "string",
      "metadata": {
        "description": "Cosmos DB collection name for app settings"
      }
    },
    "azureSearchName": {
      "type": "string",
      "metadata": {
        "description": "Name of Azure Search where the indexes are"
      }
    },
    "azureSearchQueryKey": {
      "type": "securestring",
      "metadata": {
        "description": "Query key for Azure Search"
      }
    },
    "providerPortalApplicationInsights": {
      "type": "string",
      "metadata": {
        "description": "Application Insights Reference for Course Directory i.e. dfc-<env>-prov-as-ai"
      }
    },
    "postcodeIndexName": {
      "type": "string",
      "metadata": {
        "description": "Name of the postcode index"
      }
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/",
    "functionAppName": "[concat(parameters('functionAppPrefix'),'-fa')]",
    //"appInsightName": "[concat(parameters('functionAppPrefix'),'-ai')]"
    "FunctionAppInsightInstrumentationKey":"[parameters('appInsightsInstrumentationKey')]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "ppvenueAppService",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServiceName": {
            "value": "[variables('functionAppName')]"
          },
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "appServicePlanResourceGroup": {
            "value": "[parameters('appServicePlanResourceGroup')]"
          },
          "appServiceType": {
            "value": "functionapp"
          },
          "appServiceAppSettings": {
            "value": [
              {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "[variables('FunctionAppInsightInstrumentationKey')]"
              },
              {
                "name": "FUNCTIONS_EXTENSION_VERSION",
                "value": "~3"
              },
              {
                "name": "AzureWebJobsStorage",
                "value": "[parameters('storageConnectionString')]"
              },
              {
                "name": "WEBSITE_RUN_FROM_PACKAGE",
                "value": "1"
              },
              {
                "name": "FUNCTIONS_WORKER_RUNTIME",
                "value": "dotnet"
              },
              {
                "name": "CosmosDBStorageURI",
                "value": "[parameters('cosmosDBfqdn')]"
              },
              {
                "name": "CosmosDBPrimaryKey",
                "value": "[parameters('cosmosDBkey')]"
              },
              {
                "name": "CosmosDBDatabase",
                "value": "[parameters('cosmosDBdatabase')]"
              },
              {
                "name": "SQLConnectionString",
                "value": "[parameters('SQLConnectionString')]"
              },
              {
                "name": "CollectionName",
                "value": "[parameters('cosmosDBcollection')]"
              },
              {
                "name": "SearchService",
                "value": "[parameters('azureSearchName')]"
              },
              {
                "name": "QueryKey",
                "value": "[parameters('azureSearchQueryKey')]"
              },
              {
                "name": "PostcodeIndex",
                "value": "[parameters('postcodeIndexName')]"
              }
            ]
          },
          "deployStagingSlot": {
            "value": true
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "cosmosCollectionVenues",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('appServicePlanResourceGroup')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
            "uri": "[concat(variables('deploymentUrlBase'),'CosmosDb/cosmos-collection.json')]",
            "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "accountName": {
              "value": "[parameters('cosmosDbAccount')]"
          },
          "databaseName": {
              "value": "[parameters('cosmosDBdatabase')]"
          },
          "collectionName": {
              "value": "venues"
          },
          "offerThroughput": {
              "value": 400
          }
        }
      }
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[variables('functionAppName')]"
    },
    "appInsightName": {
      "type": "string",
      "value": "[parameters('providerPortalApplicationInsights')]"
    },
    "appInsightInstrumentationKey": {
      "type": "string",
      "value": "[variables('FunctionAppInsightInstrumentationKey')]"
    }
  }
}